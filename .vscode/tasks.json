{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compilar C++ con clang++20",
        "type": "shell",
        "command": "clang++",
        "args": [
          "-std=c++20",
          "-Wall",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Tarea para compilar C++ usando clang++ y C++20"
      }
    ]
  }
  